
<h1>Sign Up</h1>
<div class="main_form text-center">
  
<% if @user.errors.any? %>
<h3>The following ERRORS prevented the<br/> USER from being CREATED!</h3>
<ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li>
        <%= msg %>
    </li>
  <% end %> 
</ul>
<%end%>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= form_for @user do |f| %>

<p>
  <%= f.label :name %> <br/>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :email %> <br/>
  <%= f.email_field :email, :value => "example@email.com" %>
</p>

<%= f.submit "create my account", class:"sign_btn btn btn-primary" %>
<% end %> 
</div>
</div>

