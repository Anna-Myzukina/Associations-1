<h1>YOUR EVENTS</h1>
<div>
   <div>Location:</div>
   <p><%= @event.location %></p> 
   <div>Event Description:</div>
   <p><%= @event.description %></p>
   <div>Host:</div>
   <p><%= @event.creator.name %></p> 
</div>
    

<% if @event.attendees.any? %>
    <% @event.attendees.each do |attendee| %>
        <span class="attendee">
            <%= attendee.username %>
        </span> <br/>
    <% end %>
<% else %>
    No attendees
<% end %><br/>

<div>
<%= link_to "Invite Attendees", "#" %>
</div>
<div>
  <%= link_to "Create New Event", new_event_path %>  
</div>
